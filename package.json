{
  "name": "eqglobal",
  "version": "1.0.7",
  "description": "Electron overlay and backend service for EverQuest log-based timers.",
  "main": "src/main/main.js",
  "scripts": {
    "start": "concurrently \"npm:app\" \"npm:backend\"",
    "app": "electron .",
    "backend": "node backend/server.js",
    "dev": "electron .",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win nsis",
    "user:create": "node scripts/create-user.js",
    "scrape:p99": "node scripts/scrape-p99-raid-windows.js",
    "cleanup:mob": "node scripts/cleanup-mob-windows.js",
    "convert:gtp": "powershell -ExecutionPolicy Bypass -File scripts/convert-gina-gtp.ps1",
    "test:patterns": "node scripts/test-patterns.js --triggers external/all-gina.triggers.json --lines test/log-lines-sample.txt",
    "capture:screens": "electron scripts/capture-screenshots.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^38.4.0",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "chokidar": "^4.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "electron-updater": "^6.3.9",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.20.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0"
  },
  "build": {
    "appId": "com.eqglobal.app",
    "productName": "EQGlobal",
    "directories": {
      "output": "dist"
    },
    "files": [
      "package.json",
      "src/**/*",
      "backend/**/*",
      "web/**/*",
      "assets/**/*",
      "external/**/*",
      "!test/**/*",
      "!scripts/**/*"
    ],
    "asar": true,
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.utilities",
      "artifactName": "EQGlobal-${version}-${arch}.${ext}"
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "EQGlobal-Setup-${version}-${arch}.exe"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility",
      "artifactName": "EQGlobal-${version}-${arch}.${ext}"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Tycee-Eecyt",
        "repo": "EQGlobal"
      }
    ],
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": false
    }
  }
}
