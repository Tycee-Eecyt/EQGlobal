# Path to the EverQuest Logs directory (e.g. C:\EverQuest\Logs)
EQ_LOG_DIR=C:\Path\To\EverQuest\Logs

# Backend server base URL (Electron app will POST log updates here)
BACKEND_URL=http://localhost:4000

# MongoDB Atlas connection string and database name for the backend service
MONGODB_URI=mongodb+srv://username:password@cluster-url.mongodb.net/?retryWrites=true&w=majority
MONGODB_DB=eqglobal

# Optional: persist trigger events to the database (default: disabled)
# Set to "true" to enable writing to the `log_events` collection.
PERSIST_LOG_EVENTS=false
