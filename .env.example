# Path to the EverQuest Logs directory (e.g. C:\EverQuest\Logs)
EQ_LOG_DIR=C:\Path\To\EverQuest\Logs

# Backend server base URL (Electron app will POST log updates here)
BACKEND_URL=http://localhost:4000

# MongoDB Atlas connection string and database name for the backend service
MONGODB_URI=mongodb+srv://username:password@cluster-url.mongodb.net/?retryWrites=true&w=majority
MONGODB_DB=eqglobal

# Optional: persist trigger events to the database (default: disabled)
# Set to "true" to enable writing to the `log_events` collection.
PERSIST_LOG_EVENTS=false

# JWT authentication configuration
JWT_SECRET=change_me
JWT_REFRESH_SECRET=change_me
JWT_ISSUER=eqglobal
JWT_AUDIENCE=eqglobal-clients
# Optional: override access/refresh token lifetimes (ex: 1h, 12h, 7d)
JWT_ACCESS_TTL=1h
JWT_REFRESH_TTL=30d

# Discord bot configuration (optional)
DISCORD_BOT_TOKEN=
DISCORD_CLIENT_ID=
# Optional: restrict command registration to a single guild for faster updates
DISCORD_GUILD_ID=
# Channel IDs for updates and dashboard
DISCORD_UPDATES_CHANNEL_ID=
DISCORD_DASHBOARD_CHANNEL_ID=
# Optional: enable/disable update messages (default: false)
DISCORD_UPDATES_ENABLED=false
# Optional: allow text commands in a channel (default: false)
DISCORD_TEXT_INPUT_ENABLED=false
# Optional: channel ID for text input (!tod ...). If empty, any channel is allowed.
DISCORD_TEXT_INPUT_CHANNEL_ID=
# Optional: restrict commands to a role ID (otherwise Manage Server permission is required)
DISCORD_OFFICER_ROLE_ID=
# Optional: disable command registration
DISCORD_COMMANDS_ENABLED=true
# Optional: refresh dashboard on an interval (ms). 0 disables interval refresh.
DISCORD_DASHBOARD_REFRESH_MS=0
